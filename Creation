import javax.swing.JOptionPane;

//class Cour declaration
class Course {
   //instance variables
private String CourseName;//variable CourseName holds the name of the course
private String [] Students = new String[40];//string array that named Students has size 40
private int NumberOfStudents;//NumberOfDocuments integer variable holds the number of students in that course
  
//constructor to create a course
public Course(String CName)// that have one argument typed string that assining to the CourseName
{
this.CourseName = CName;
}
//Method to add students
public void AddStudent(String SName)//this is method to add Student name in the Studens array it have one argument typed string
{
Students[NumberOfStudents]=SName;//add the student name to the Studens array
NumberOfStudents++;//increments the NumberOfDocuments by one
}
  
//Method to get student name
public String[] GetStudents()//this methods returns the Student array
{
return Students;
}
  
//Method to get course number
public String GetCourseName()//this method will return the Coursename
{
return CourseName;
}
  
//Method to get number of students
public int GetNumberOfStudents()//this method is return the number of students
{
return NumberOfStudents;
}
}
//Class named Good that contains the main method
public class Good {

public static void main(String[] args) {
// create courses
Course Java = new Course("Java: CSC-111");//this will creates the object of the Class Course with Course name Java: CSC-111
Course Physics = new Course("College Physics 1: Phy-221");//this will creates the object of the Class Course with Course name College Physics 1: Phy-221
Course Biology = new Course("General Biology: Bio-201");//this will creates the object of the Class Course with Course name General Biology: Bio-201
Course Arts = new Course("Basic Drawing: ART-105");//this will creates the object of the Class Course with Course name Basic Drawing: ART-105
  
// Create a menu for the registrar
String stT="\n\n 1) Register for Java\n"+
"\n 2) Register for College Physics 1\n"+
"\n 3) Register for General Biology\n"+
"\n 4) Register for Basic Drawing\n"+
"\n 5) Exit the program\n\n";
int Choice;
String ChoiceT, nmT;
do
{
// load students into classes
do//this loop runs untill user enters the valid choice between 1 to 5 enclusive
{
ChoiceT = JOptionPane.showInputDialog(stT+"Enter a choice");//this will open the a dialog box for take a user input and saves it in ChoiceT
Choice=Integer.parseInt(ChoiceT); //then covert this ChoiceT variable from string to integer
}while(Choice <1 || Choice > 5);//checks if choice is between 1 to 5 if its not then ask again
  
if(Choice == 1)//if choice is 1 then ask the name of the student and add the student in the java course
{
                   //taking name from the input dialog box
nmT = JOptionPane.showInputDialog("Enter student name you wish to register for Java");
Java.AddStudent(nmT);//calls the AddStudent method of the Course class with nmT string varibale
}
  
if(Choice == 2)//if choice is 2 then ask the name of the student and add the student in the java Physics
{
nmT = JOptionPane.showInputDialog("Enter student name you wish to register for Physics");
Physics.AddStudent(nmT);
}
  
if(Choice == 3)//if choice is 3 then ask the name of the student and add the student in the Biology course
{
nmT = JOptionPane.showInputDialog("Enter student name you wish to register for Biology");
Biology.AddStudent(nmT);
}
  
if(Choice == 4)//if choice is 4 then ask the name of the student and add the student in the Arts course
{
nmT = JOptionPane.showInputDialog("Enter student name you wish to register for Basic Drawing");
Arts.AddStudent(nmT);
}
  
  
}while(Choice != 5);
  
// Print students in the class
           //this will print tha all the student of the java course
if(Java.GetNumberOfStudents() > 0)//checks number of students in the java course if greater the 0
{
System.out.println("We have " + Java.GetNumberOfStudents()+" students signed for Java\n");
String[] JavaClassList = Java.GetStudents();//this will assigns the array of to the Variable JavaClassList
for (int i = 0; i < Java.GetNumberOfStudents(); i++)//loops through all the students in the Java Course
System.out.println(JavaClassList[i]);//print the student name from tha array one by one
}
  
               //this will print tha all the student of the Physics course
if(Physics.GetNumberOfStudents() > 0)
{
System.out.println("We have " + Physics.GetNumberOfStudents()+" students signed for Physics\n");
String[] PhysicsClassList = Physics.GetStudents();
for (int i = 0; i < Physics.GetNumberOfStudents(); i++)
System.out.println(PhysicsClassList[i]);
}
//this will print tha all the student of the Biology course
if(Biology.GetNumberOfStudents() > 0)
{
System.out.println("We have " + Biology.GetNumberOfStudents()+" students signed for Biology\n");
String[] BiologyClassList = Biology.GetStudents();
for (int i = 0; i < Biology.GetNumberOfStudents(); i++)
System.out.println(BiologyClassList[i]);
}
               //this will print tha all the student of the Arts course
if(Arts.GetNumberOfStudents() > 0)
{
System.out.println("We have " + Arts.GetNumberOfStudents()+" students signed for Arts\n");
String[] ArtsClassList = Arts.GetStudents();
for (int i = 0; i < Arts.GetNumberOfStudents(); i++)
System.out.println(ArtsClassList[i]);
}
}
